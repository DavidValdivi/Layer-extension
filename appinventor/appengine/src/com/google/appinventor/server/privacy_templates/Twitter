@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ai: <http://dig.csail.mit.edu/2014/PrivacyInformer/appinventor#> .
@prefix android: <http://dig.csail.mit.edu/2014/PrivacyInformer/android#> .
@prefix twitter: <http://dig.csail.mit.edu/2014/PrivacyInformer/Twitter#> .

# Twitter is component
# It is used for social networking
# It enables communication to the Web
# It requires user authorization and login, once login it has many functions
# Search Twitter for tweets or labels
# Sends a Tweet
# Sendg a Tweet with Image
# Direct message to a Twitter user
# Receive recent messages
# Follow Twitter user
# Stop following Twitter user
# Get followers
# Get recent messages by followed users
# Get recent mentions
# Example of usage is usually to share data with Twitter followers, or uploading something to Twitter

# Component Description
twitter:TwitterComponent  
    a   owl:Class;
    rdfs:subClassOf ai:Component,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:category; 
                        owl:hasValue    ai:Social] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:description; 
                        owl:hasValue    "allows user to interact with Twitter" ] , 
                    [   a               owl:Restriction;
                        owl:onProperty  ai:details; 
                        owl:hasValue    "Upon log in, many actions are authenticated to the application: ",
                                        "Tweet ", 
                                        "Tweet image ",
                                        "Send message ",
                                        "Receive message",
                                        "Follow another user ",
                                        "Stop following an user ",
                                        "Get current followers ",
                                        "Get tweets of followed users ",
                                        "Get tweets that mention the user" ] ,

# Privacy Implication and Common Usage
                    [   a               owl:Restriction;
                        owl:onProperty  ai:access; 
                        owl:hasValue    android:Internet] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:examples; 
                        owl:hasValue    "Twitter", "WeReport" ] ,
                    [   a               owl:Restriction;
                        owl:onPropoerty ai:dataUsage;
                        owl:hasValue    ai:SocialNetworking ] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:purpose; 
                        owl:hasValue    ai:DataAccess ] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:requires; 
                        owl:hasValue    ai:UserLogin, android:Internet ] .

# Instance Definitions
twitter:Username    rdfs:subclassOf   ai:ComponentProperty; 
                    rdfs:label  "user name of the Twitter account holder " .
                
twitter:Tweet   rdfs:subclassOf   ai:ComponentMethod;
                rdfs:label  "twitter's tweet method " .

twitter:MentionsReceived    rdfs:subclassOf   ai:ComponentEvent;
                            rdfs:label  "twitter event that detects when messages that mention the account holder's name have been received " .
