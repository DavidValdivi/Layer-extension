@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ai: <http://dig.csail.mit.edu/2014/PrivacyInformer/appinventor#> .
@prefix android: <http://dig.csail.mit.edu/2014/PrivacyInformer/android#> .
@prefix location: <http://dig.csail.mit.edu/2014/PrivacyInformer/LocationSensor#> .

# LocationSensor is a component
# It is also a sensor
# It is used to gather data
# It does not require User, but android permission access
# Implemented using android.hardware.SensorListener
# It measure latitude, longitude and altitude (if supported) 

# Component Description
location:LocationSensorComponent  
    a   owl:Class;
    rdfs:subClassOf ai:Component,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:category; 
                        owl:hasValue    ai:Sensor] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:description; 
                        owl:hasValue    "senses the Android device's location with latitude and longitude values, can also convert physical addresses to lat/long values, as well as detect when the location changes" ] , 
                    [   a               owl:Restriction;
                        owl:onProperty  ai:details; 
                        owl:hasValue    "altitude can also be measured when the device supports it",
                                        "implemented using android.hardware.SensorListener"] ,

# Privacy Implication and Common Usage
                    [   a               owl:Restriction;
                        owl:onProperty  ai:access; 
                        owl:hasValue    android:CoarseLocation, android:FineLocation] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:examples; 
                        owl:hasValue    "Google Maps", "TrackMe" ] ,
                    [   a               owl:Restriction;
                        owl:onPropoerty ai:dataUsage;
                        owl:hasValue    ai:DetectLocation ] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:purpose; 
                        owl:hasValue    ai:DataGathering ] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:requires; 
                        owl:hasValue    android:CoarseLocation, android:FineLocation ] .

# Instance Definitions
location:Latitude   rdfs:subclassOf   ai:ComponentProperty; 
                    rdfs:label  "device's location by latitude " .
location:Longitude  rdfs:subclassOf   ai:ComponentProperty;
                    rdfs:label  "device's location by longitude " .
location:Altitude   rdfs:subclassOf   ai:ComponentProperty;
                    rdfs:label  "device's location by altitude " .

location:LatitudeFromAddress    rdfs:subclassOf   ai:ComponentMethod;
                                rdfs:label  "from a physical address, get the corresponding latitude value " .

location:LongitudeFromAddress   rdfs:subclassOf   ai:ComponentMethod;
                                rdfs:label  "from a physical address, get the corresponding longitude value " .

location:LocationChanged   rdfs:subclassOf   ai:ComponentEvent;
                           rdfs:label  "location sensor's event that detects when its value changes " .
