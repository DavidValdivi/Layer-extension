@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ai: <http://dig.csail.mit.edu/2014/PrivacyInformer/appinventor#> .
@prefix android: <http://dig.csail.mit.edu/2014/PrivacyInformer/android#> .
@prefix accelerometer: <http://dig.csail.mit.edu/2014/PrivacyInformer/AccelerometerSensor#> .

# Accelerometer is a component
# It is also a sensor
# It is used to gather data
# It does not require User, but android permission access
# Implemented using android.hardware.SensorListener
# It measure X, Y, Z acceleration
# X measures when phone is tilted sideways
# Y measures when phone is tilted up and down
# Z measures phone's acceleration compared to the Earth's gravity
# Acceleration units are in International Standard (m/s^2)

# Component Description
accelerometer:AccelerometerSensorComponent  
    a   owl:Class;
    rdfs:subClassOf ai:Component,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:category; 
                        owl:hasValue    ai:Sensor] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:description; 
                        owl:hasValue    "senses the Android device's accelerometer, which detects shaking and measures acceleration in three dimensions"] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:details; 
                        owl:hasValue    "X measures when phone is tilted sideways",
                                        "Y measures when phone is tilted up and down",
                                        "Z measures phone's acceleration compared to the Earth's gravity",
                                        "units are in International Standard (m/s^2)",
                                        "implemented using android.hardware.SensorListener"] ,

# Privacy Implication and Common Usage
                    [   a               owl:Restriction;
                        owl:onProperty  ai:access; 
                        owl:hasValue    android:Accelerometer] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:examples; 
                        owl:hasValue    "Fitbit", "TrackMe" ] ,
                    [   a               owl:Restriction;
                        owl:onPropoerty ai:dataUsage;
                        owl:hasValue    ai:MeasuresAcceleration, ai:DetectMotion ] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:purpose; 
                        owl:hasValue    ai:DataGathering ] ,
                    [   a               owl:Restriction;
                        owl:onProperty  ai:requires; 
                        owl:hasValue    android:Accelerometer ] .


# Instance Definitions
accelerometer:XAccel    rdfs:subclassOf   ai:ComponentProperty; 
                        rdfs:label  "accelerometer's X acceleration " .
accelerometer:YAccel    rdfs:subclassOf   ai:ComponentProperty;
                        rdfs:label  "accelerometer's Y acceleration " .
accelerometer:ZAccel    rdfs:subclassOf   ai:ComponentProperty;
                        rdfs:label  "accelerometer's Z acceleration " .

accelerometer:AccelerationChanged   rdfs:subclassOf   ai:ComponentEvent;
                                    rdfs:label  "accelerometer's event that detects when its value changes " .
accelerometer:Shaking   rdfs:subclassOf   ai:ComponentEvent;
                        rdfs:label  "accelerometer's event that detects when the device is shaken " .
