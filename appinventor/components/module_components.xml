  <patternset id="excluded.from.module.components">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.components">
    <patternset refid="excluded.from.module.components"/>
  </patternset>
  
  <path id="components.module.sourcepath">
    <dirset dir="${module.components.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="components.module.test.sourcepath">
    <dirset dir="${module.components.basedir}">
      <include name="tests"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.components" depends="compile.module.components.production,compile.module.components.tests" description="Compile module components"/>
  
  <target name="compile.module.components.production" depends="register.custom.compilers,compile.module.common,compile.module.build" description="Compile module components; production classes">
    <mkdir dir="${components.output.dir}"/>
    <javac2 destdir="${components.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.components}/javac">
      <compilerarg line="${compiler.args.components}"/>
      <bootclasspath refid="components.module.bootclasspath"/>
      <classpath refid="components.module.production.classpath"/>
      <src refid="components.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.components"/>
    </javac2>
    
    <copy todir="${components.output.dir}">
      <fileset dir="${module.components.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.components.tests" depends="register.custom.compilers,compile.module.components.production" description="compile module components; test classes" unless="skip.tests">
    <mkdir dir="${components.testoutput.dir}"/>
    <javac2 destdir="${components.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.components}/javac">
      <compilerarg line="${compiler.args.components}"/>
      <bootclasspath refid="components.module.bootclasspath"/>
      <classpath refid="components.module.classpath"/>
      <src refid="components.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.components"/>
    </javac2>
    
    <copy todir="${components.testoutput.dir}">
      <fileset dir="${module.components.basedir}/tests">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.components" description="cleanup module">
    <delete dir="${components.output.dir}"/>
    <delete dir="${components.testoutput.dir}"/>
  </target>
</project>